# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = tab
indent_size = 4

# Fish shell scripts
[*.fish]
indent_style = space
indent_size = 4

# Lua files (Neovim config)
[*.lua]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Configuration files
[*.conf]
indent_style = space
indent_size = 2

# Git files
[.gitconfig]
indent_style = tab

[.gitignore]
indent_style = space
indent_size = 2

# Tmux configuration
[tmux.conf]
indent_style = space
indent_size = 2
